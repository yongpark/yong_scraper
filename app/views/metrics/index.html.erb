<h1>Listing metrics</h1>

<table>
  <thead>
    <tr>
      <th>Successful</th>
      <th>Failed</th>
      <th>Remaining</th>
      <th>Converted</th>
      <th>Queued at</th>
      <th>Contents</th>
      <th>Api</th>
      <th>Auth</th>
      <th>App</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @metrics.each do |metric| %>
      <tr>
        <td><%= metric.successful %></td>
        <td><%= metric.failed %></td>
        <td><%= metric.remaining %></td>
        <td><%= metric.converted %></td>
        <td><%= metric.queued_at %></td>
        <td><%= metric.contents %></td>
        <td><%= metric.api_id %></td>
        <td><%= metric.auth_id %></td>
        <td><%= metric.app_id %></td>
        <td><%= link_to 'Show', metric %></td>
        <td><%= link_to 'Edit', edit_metric_path(metric) %></td>
        <td><%= link_to 'Destroy', metric, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Metric', new_metric_path %>
